<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <Button
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/setting"
        android:onClick="setting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停车场管理系统"
        android:textAlignment="center"
        android:textColor="#f5f76b"
        android:textSize="60dp" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/background_button">

            <ImageButton
                android:id="@+id/button_light"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:background="@drawable/light_imagebutton" />

            <ImageButton
                android:id="@+id/button_parkingspace"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:background="@drawable/parkingsapce_imagebutton" />

            <ImageButton
                android:id="@+id/button_hydrant"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:background="@drawable/hydrant_imagebutton" />

            <ImageButton
                android:id="@+id/button_camera"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:background="@drawable/camera_imagebutton" />

            <ImageButton
                android:id="@+id/button_all"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:background="@drawable/all_imagebutton" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
